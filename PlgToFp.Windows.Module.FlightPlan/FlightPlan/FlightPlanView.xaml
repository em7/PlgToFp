<UserControl x:Class="PlgToFp.Windows.Module.FlightPlan.FlightPlan.FlightPlanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlgToFp.Windows.Module.FlightPlan.FlightPlan"
             xmlns:infraConverters="clr-namespace:PlgToFp.Windows.Infrastructure.Converters;assembly=PlgToFp.Windows.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:FlightPlanViewModel}">
    <UserControl.Resources>
        <infraConverters:BoolToVisibilityCollapsedConverter x:Key="BoolToVisCollapsedConverter" />
    </UserControl.Resources>
    <Grid>
        <!--Main Content-->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=HasError, Mode=TwoWay}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="Origin" />
                <TextBlock Text="{Binding Path=FlightPlan.Origin, TargetNullValue='', FallbackValue=''}"
                           Margin="4,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBlock Text="Destination" />
                <TextBlock Text="{Binding Path=FlightPlan.Destination, TargetNullValue='', FallbackValue=''}"
                           Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- error message -->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=HasError, Mode=OneWay}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <TextBlock Margin="0,10,0,0"
                       Text="{Binding Path=ErrorMessage, Mode=OneWay}"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       FontSize="15"
                       Foreground="{DynamicResource ValidationSummaryColor2}"
                       />
        </Grid>
    </Grid>
</UserControl>
