<UserControl x:Class="PlgToFp.Windows.Module.FlightPlan.FlightPlan.PlanPointsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlgToFp.Windows.Module.FlightPlan.FlightPlan"
             xmlns:converters="clr-namespace:PlgToFp.Windows.Module.FlightPlan.FlightPlan.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:FlightPlanViewModel}">
    <UserControl.Resources>
        <converters:CoordsLatNumToFmcConverter x:Key="LatCoordsConverter" />
        <converters:CoordsLonNumToFmcConverter x:Key="LonCoordsConverter" />
    </UserControl.Resources>

    <ListView ItemsSource="{Binding Path=FlightPlan.Waypoints}"
              AllowDrop="True"
              PreviewMouseLeftButtonDown="ListViewPreviewMouseLeftButtonDown"
              PreviewMouseMove="ListViewPreviewMouseMove"
              DragEnter="ListViewDragEnter"
              Drop="ListViewDrop"
              x:Name="WaypointsListView"
              >
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Vertical"
                            Margin="0,0,0,3">
                    <TextBlock Text="{Binding Path=Identifier}"
                               Style="{StaticResource TextLarger}"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Latitude, Converter={StaticResource LatCoordsConverter}}" />
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding Longitude, Converter={StaticResource LonCoordsConverter}}" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
